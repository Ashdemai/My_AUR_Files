# Maintainer: zxp19821005 <zxp19821005 at 163 dot com>
_pkgname="nuclear"
pkgname="${_pkgname}-player-appimage"
pkgver=0.6.24
pkgrel=1
epoch=
pkgdesc="Streaming music player that finds free music for you"
arch=("x86_64")
url="https://nuclear.js.org/"
_githuburl="https://github.com/nukeop/nuclear"
license=("AGPL3")
depends=("hicolor-icon-theme" "zlib")
options=(!strip)
conflicts=("${pkgname%-appimage}")
_install_path="/opt/appimages"
source=("${pkgname%-appimage}-${pkgver}.AppImage::${_githuburl}/releases/download/v${pkgver}/${_pkgname}-v${pkgver}.AppImage")
sha256sums=('2462e686827ad6c9e8b8550c9483861f2654866f3ca9430e45612c92e1332212')
        
prepare() {
    chmod a+x "${srcdir}/${pkgname%-appimage}-${pkgver}.AppImage"
    "${srcdir}/${pkgname%-appimage}-${pkgver}.AppImage" --appimage-extract
    sed "s|AppRun|${_install_path}/${_pkgname}.AppImage|g" -i "${srcdir}/squashfs-root/${_pkgname}.desktop"
}
        
package() {
    install -Dm755 "${srcdir}/${_pkgname}-${pkgver}.AppImage" "${pkgdir}/${_install_path}/${_pkgname}.AppImage"
    install -Dm644 "${srcdir}/squashfs-root/${_pkgname}.desktop" "${pkgdir}/usr/share/applications/${_pkgname}.desktop"
    install -Dm644 "${srcdir}/squashfs-root/usr/share/icons/hicolor/0x0/apps/${_pkgname}.png" -t "${pkgdir}/usr/share/pixmaps"
}